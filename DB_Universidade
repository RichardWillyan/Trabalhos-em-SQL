--Criação tabela professores

create table professores
(
	CODIGO			serial,
	REGISTRO		numeric(5),
	NOME			varchar(100),
	EMAIL			varchar(100),
	CPF				numeric(11),
	RG				numeric(09),
	TELEFONE		numeric(11),
	constraint PK_Prof primary key (CODIGO)
);

--Criação tabela cursos

create table Cursos
(
	CODIGO			serial,
    NOME     		varchar(100),
	CARGA_HORARIA	int,
	COORDENADOR		int,
	constraint PK_Cursos primary key (CODIGO),
	constraint FK_Professores foreign key (COORDENADOR) references professores (CODIGO)
);

--Criação tabela diciplinas

create table Diciplinas
(
	CODIGO			serial,
	NOME			varchar(100),
	CARGA_HORARIA	int,
	EMENTA			varchar(100),
	CURSOS			int,
	constraint PK_Diciplinas primary key (CODIGO),
	constraint FK_Cursos foreign key (CURSOS) references Cursos (CODIGO)
);

--Criação tabela Turnos

create table Turnos
(
	CODIGO			int,
	DESCRICAO		varchar(100),
	PERIODO			varchar(100),
	constraint PK_Turnos primary key (CODIGO)
);

--Criação tabela Turnos

create table Alunos
(
	CODIGO				serial,
	RA					numeric(12),
	NOME				varchar(100),
	EMAIL				varchar(100),
	DATA_NASCIMENTO		date,
	TELEFONE			numeric(11),
	CURSOS				int,
	TURNO				int,
	constraint PK_Alunos primary key (CODIGO),
	constraint FK_Cursos foreign key (CURSOS) references Cursos (CODIGO),
	constraint FK_Turnos foreign key (TURNO) references Turnos (CODIGO)
);
